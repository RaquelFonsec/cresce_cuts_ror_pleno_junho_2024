<!-- app/views/campaigns/index.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todas Campanhas</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      background-color: #f0f0f0;
      color: #333;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    table {
      background-color: #fff;
      color: #333;
      width: 100%;
      border-collapse: collapse;
      border: 1px solid #ddd;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    .btn {
      background-color: #007bff;
      color: #fff;
      text-decoration: none;
      padding: 10px 20px;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .btn:hover {
      background-color: #0056b3;
    }

    .link {
      color: #007bff;
      text-decoration: none;
      transition: color 0.3s;
    }

    .link:hover {
      color: #0056b3;
    }

    .status-icon {
      margin-right: 8px;
    }

    .actions {
      display: flex;
      align-items: center;
    }

    .actions a, .actions button {
      margin-right: 10px;
      color: #007bff;
      text-decoration: none;
      transition: color 0.3s;
    }

    .actions a:hover, .actions button:hover {
      color: #0056b3;
    }

    .actions i {
      margin-right: 4px;
    }

    /* Estilo para a frase promocional */
    .promo-message {
      font-size: 24px;
      color: #007bff; /* Azul */
      text-align: center;
      margin-bottom: 20px; /* Espaço abaixo da frase */
    }
  </style>
</head>
<body>
  <div class="promo-message">
    Aproveite nossa campanha de descontos! Até 50% OFF em produtos selecionados.
  </div>

  <table>
    <thead>
      <tr>
        <th>Produto</th>
        <th>Descrição</th>
        <th>Preço original</th>
        <th>Preço com Desconto</th>
        <th>Status</th>
        <th>Data de Início</th>
        <th>Data de Término</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @campaigns.each do |campaign| %>
        <tr>
          <td>
            <% if campaign.image.attached? %>
              <%= image_tag campaign.image, class: "img-thumbnail", style: "max-width: 100px; max-height: 100px;" %>
            <% else %>
              Sem imagem
            <% end %>
            <br>
            <%= campaign.product.name %>
          </td>
          <td><%= campaign.description %></td>
          <td><%= number_to_currency(campaign.original_price, unit: "R$", precision: 2) %></td>
          <td><%= number_to_currency(campaign.discounted_price, unit: "R$", precision: 2) %></td>
          <td>
            <% if campaign.ativo? %>
              <i class="fas fa-check-circle status-icon" style="color: green;"></i>
              Ativo
            <% elsif campaign.expirado? %>
              <i class="fas fa-times-circle status-icon" style="color: red;"></i>
              Expirado
            <% else %>
              <i class="fas fa-clock status-icon" style="color: orange;"></i>
              Agendado
            <% end %>
          </td>
          <td><%= l(campaign.start_date) %></td>
          <td><%= l(campaign.end_date) %></td>
          <td class="actions">
          <% if campaign.discount.present? %>
          <%= link_to history_discount_campaign_discount_path(campaign, campaign.discount), class: 'link' do %>
            <i class="fas fa-eye"></i> Histórico <!-- Ícone de olho -->
          <% end %>
        <% else %>
          <span class="link">Sem desconto</span>
        <% end %>
        
        <%= link_to edit_campaign_path(campaign), class: 'link' do %>
          <i class="fas fa-pencil-alt"></i> <!-- Ícone de caneta -->
        <% end %>
        
        <%= button_to campaign_path(campaign), method: :delete, data: { confirm: 'Tem certeza de que deseja excluir esta campanha?' }, class: 'link' do %>
          <i class="fas fa-trash-alt"></i> <!-- Ícone de lixeira -->
        <% end %>
        
        
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Nova Campanha', new_campaign_path, class: "btn btn-success" %>
</body>
</html>
