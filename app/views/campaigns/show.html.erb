
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @campaign.title %></h1>
      <p><%= @campaign.description %> por 30% !!</p>
      
      <h2>Detalhes da Campanha</h2>
      <div class="card">
        <div class="card-body">
          <p><strong>Produto:</strong> <%= @campaign.product.name %></p>
          <p><strong>Descrição:</strong> <%= @campaign.description %> por 30% !!</p>
          <p><strong>Preço Original:</strong> <%= number_to_currency(@campaign.original_price) %></p>
          <p><strong>Preço com Desconto:</strong> <%= number_to_currency(@campaign.discounted_price) %></p>
          <p><strong>Status:</strong> <%= @campaign.calculated_status %></p>
          <p><strong>Data de Início:</strong> <%= l @campaign.start_date %></p>
          <p><strong>Data de Término:</strong> <%= l @campaign.end_date %></p>
          <p><strong>Criado por:</strong> <%= @campaign.user.email %></p>
        </div>
      </div>
      
      <div class="mt-3">
        <%= link_to 'Editar', edit_campaign_path(@campaign), class: 'btn btn-primary' %>
        <%= link_to 'Voltar para todas as campanhas', campaigns_path, class: 'btn btn-secondary ml-2' %>
      </div>
    </div>
  </div>
</div>

